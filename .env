# Application
APP_NAME="OpenBiz Suite"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://openbiz.local

# Database
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=openbiz
DB_USERNAME=openbiz
DB_PASSWORD=secret
DB_ROOT_PASSWORD=rootsecret

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache & Session
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Queue
QUEUE_CONNECTION=redis
HORIZON_BALANCE=auto

# MinIO (S3-compatible)
FILESYSTEM_DISK=minio
AWS_ENDPOINT=http://minio:9000
AWS_ACCESS_KEY_ID=openbiz
AWS_SECRET_ACCESS_KEY=secret123
AWS_BUCKET=openbiz
AWS_USE_PATH_STYLE_ENDPOINT=true

# Meilisearch
MEILISEARCH_HOST=http://meilisearch:7700
MEILISEARCH_KEY=masterkey123
SCOUT_DRIVER=meilisearch

# Broadcasting
BROADCAST_DRIVER=pusher
PUSHER_HOST=soketi
PUSHER_PORT=6001
PUSHER_SCHEME=http
PUSHER_APP_ID=openbiz
PUSHER_APP_KEY=openbiz-key
PUSHER_APP_SECRET=openbiz-secret

# Mail
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@openbiz.local"
MAIL_FROM_NAME="${APP_NAME}"

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# MinIO Configuration
MINIO_ACCESS_KEY=openbiz
MINIO_SECRET_KEY=secret123
MINIO_BUCKET=openbiz
